{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "build",
			"args": [
				"--release"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"label": "rust: cargo build release"
		},
		{
			"type": "shell",
			"command": "RUST_LOG=debug ./target/release/gnome-web-apps",
			"problemMatcher": [
				"$rustc",
			],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"label": "Build and run release app",
			"dependsOn": [
				"rust: cargo build release"
			]
		},
		{
			"type": "shell",
			"command": "./flatpak/build.sh",
			"problemMatcher": [
				"$rustc",
			],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"label": "Build flatpak"
		},
	]
}