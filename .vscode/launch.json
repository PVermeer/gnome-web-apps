{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug",
      "env": {
        // "RUST_BACKTRACE": "1",
        "RUST_LOG": "debug",
        "GSETTINGS_BACKEND": "memory"
      },
      "cargo": {
        "args": [
          "build",
          "--bin=gnome-web-apps",
          "--package=gnome-web-apps"
        ],
        "filter": {
          "name": "gnome-web-apps",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Flatpak run",
      "env": {
        "RUST_LOG": "debug",
        "GSETTINGS_BACKEND": "memory"
      },
      "runtimeExecutable": "flatpak",
      "runtimeArgs": [
        "--user",
        "run",
        "--filesystem=/workspaces",
        "org.pvermeer.GnomeWebApps"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Flatpak build and run",
      "env": {
        "RUST_LOG": "debug",
        "GSETTINGS_BACKEND": "memory"
      },
      "runtimeExecutable": "flatpak",
      "runtimeArgs": [
        "--user",
        "run",
        "--filesystem=/workspaces",
        "org.pvermeer.GnomeWebApps"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "Build flatpak"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Flatpak container",
      "env": {
        "RUST_LOG": "debug",
        "RUST_BACKTRACE": "1",
        "GSETTINGS_BACKEND": "memory",
      },
      "runtimeExecutable": "flatpak",
      "runtimeArgs": [
        "--user",
        "run",
        "--devel",
        "--filesystem=/workspaces",
        "--command=bash",
        "org.pvermeer.GnomeWebApps"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests",
      "env": {
        "RUST_LOG": "debug",
        "GSETTINGS_BACKEND": "memory"
      },
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=gnome-web-apps",
          "--package=gnome-web-apps"
        ],
        "filter": {
          "name": "gnome-web-apps",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}