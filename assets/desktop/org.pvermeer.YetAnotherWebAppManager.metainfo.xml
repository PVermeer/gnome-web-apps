<component type="desktop-application">
  <id>org.pvermeer.YetAnotherWebAppManager</id>
  <name>Yet Another Web App Manager</name>
  <developer id="org.pvermeer">
    <name>PVermeer</name>
  </developer>
  <launchable type="desktop-id">org.pvermeer.YetAnotherWebAppManager.desktop</launchable>
  <summary>Create web apps</summary>
  <description>
    <p>Yet another web app manager, written in rust with GTK and beautiful Adwaita.</p>
<ul>
    <li>Easy browser switching</li>
    <li>Add custom browsers with a yaml and desktop file</li>
    <li>Isolation build in if browser supports it</li>
</ul>

  </description>
  <content_rating type="oars-1.1" />

  <metadata_license>CC-BY-SA-4.0</metadata_license>
  <project_license>GPL-3.0-only</project_license>

