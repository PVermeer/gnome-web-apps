// For format details, see https://aka.ms/devcontainer.json.
{
	"name": "Fedora",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {
			"installZsh": "false",
			"username": "vscode",
			"userUid": "1000",
			"userGid": "1000",
			"upgradePackages": "false"
		}
	},
	"runArgs": [
		"--privileged", // Unsecure but allows flatpak --user install
		"--device=/dev/dri",
		"--network=host", // If network is slow in container
		"--device=/dev/fuse"
	],
	"containerEnv": {
		// "DBUS_SESSION_BUS_ADDRESS": "${localEnv:DBUS_SESSION_BUS_ADDRESS}"
	},
	"mounts": [
		// "type=bind,source=/run/user/1000,target=/run/user/1000"
	],
	"postCreateCommand": "sudo dnf install -y chromium firefox && sudo dbus-daemon --system || true && flatpak --user install -y com.brave.Browser org.chromium.Chromium io.github.ungoogled_software.ungoogled_chromium com.google.Chrome org.gnome.Epiphany com.vivaldi.Vivaldi com.opera.Opera org.mozilla.firefox",
	"postStartCommand": "sudo dnf update -y && (rustup update || (rustup toolchain uninstall stable && rustup toolchain install stable)) && sudo dbus-daemon --system || true && flatpak --user update -y",
	"remoteUser": "vscode",
	"customizations": {
		"vscode": {
			"extensions": [
				"rust-lang.rust-analyzer",
				"vadimcn.vscode-lldb",
				"tamasfe.even-better-toml"
			]
		}
	}
}